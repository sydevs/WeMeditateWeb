{
  "permissions": {
    "allow": [
      "mcp__plugin_sydevs-web_*",
      "mcp__plugin_sydevs_*",
      "Bash(pnpm exec playwright test --list)",
      "Bash(pnpm vitest list:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm outdated:*)",
      "Bash(pnpm audit:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff -v 5"
          },
          {
            "type": "command",
            "command": "say Claude is waiting for input"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff -v 5"
          },
          {
            "type": "command",
            "command": "say Claude is waiting for input"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/typecheck.mjs"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/eslint.mjs"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/security-scan.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/build-validation.mjs"
          }
        ]
      }
    ]
  }
}
